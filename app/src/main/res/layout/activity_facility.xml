<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FacilityActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="193dp"
        android:layout_height="47dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aldrich"
        android:text="FACILITIES"
        android:textAlignment="center"
        android:textColor="#FC090808"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aldrich"
        android:text="BoysHostel :"
        android:textColor="#EE0A0A0A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/hosteltce" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="1000dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/Facility"
        android:textColor="#FC070000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aldrich"
        android:text="GirlsHostel"
        android:textColor="#EE0A0A0A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="390dp"
        android:layout_height="900dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/Girlshostel"
        android:textColor="#FC070000"
        android:textSize="18sp" />



</LinearLayout>

</ScrollView>



